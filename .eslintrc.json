{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            2
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-extra-parens": "error",
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "no-multi-spaces": "error"
    },
    "settings": {
        "react": {
            "version": "16.3"
        }
    }
}